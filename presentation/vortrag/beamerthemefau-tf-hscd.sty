%-------------------------------------------------------------------------------
% Main file
%-------------------------------------------------------------------------------

\mode<presentation>


\usepackage{calc}
\usepackage{pgf}


\newif\ifbeamer@seal
\beamer@sealtrue

\newif\ifbeamer@logo
\beamer@logofalse

\newif\ifbeamer@image
\beamer@imagefalse

\newif\ifbeamer@plain
\beamer@plainfalse

\newif\ifbeamer@longtitle
\beamer@longtitlefalse

\newif\ifbeamer@dark
\beamer@darkfalse

\DeclareOptionBeamer{seal}[true]{%
  \csname beamer@seal#1\endcsname%
  \ifbeamer@seal%
    \beamer@plainfalse%
    \beamer@logofalse%
    \beamer@imagefalse%
  \fi
}

\DeclareOptionBeamer{logo}[true]{%
  \csname beamer@logo#1\endcsname%
  \ifbeamer@logo%
    \beamer@plainfalse%
    \beamer@sealfalse%
    \beamer@imagefalse%
  \fi
}

\DeclareOptionBeamer{image}[true]{%
  \csname beamer@image#1\endcsname%
  \ifbeamer@image%
    \beamer@plainfalse%
    \beamer@sealfalse%
    \beamer@logofalse%
  \fi
}

\DeclareOptionBeamer{plain}[true]{%
  \csname beamer@plain#1\endcsname%
  \ifbeamer@plain%
    \beamer@sealfalse%
    \beamer@logofalse%
    \beamer@imagefalse%
  \fi
}

\DeclareOptionBeamer{longtitle}[true]{%
  \csname beamer@longtitle#1\endcsname%
}

\DeclareOptionBeamer{dark}[true]{%
  \csname beamer@dark#1\endcsname%
}

\ProcessOptionsBeamer


% Include FAU theme
\usetheme[
  seal=\ifbeamer@seal true\else false\fi,
  logo=\ifbeamer@logo true\else false\fi,
  image=\ifbeamer@image true\else false\fi,
  plain=\ifbeamer@plain true\else false\fi,
  longtitle=\ifbeamer@longtitle true\else false\fi,
  dark=\ifbeamer@dark true\else false\fi
]{fau-tf}
\useinnertheme{fau-tf-hscd}
\useoutertheme{fau-tf-hscd}


\ifdim \beamer@aspectratio pt=\beamer@fourtothree pt%
  % Aspect ratio 4:3
  \pgfdeclareimage[width=1.080cm]{codesign-small}{art/tf/hscd/codesign}
  \pgfdeclareimage[width=1.651cm]{codesign-large}{art/tf/hscd/codesign}
\else\ifdim \beamer@aspectratio pt=\beamer@sixteentonine pt%
  % Aspect ratio 16:9
  \pgfdeclareimage[width=1.013cm]{codesign-small}{art/tf/hscd/codesign}
  \pgfdeclareimage[width=1.549cm]{codesign-large}{art/tf/hscd/codesign}
\else%
  \errmessage{Any layout other than aspect ratio 4:3 or 16:9 is not supported}
\fi\fi%


\mode
<all>
